<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.bluetoothlegatt.GraphActivity">

    <TextView android:text="@string/app_title" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_title_id"
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:textSize="20sp" />

    <fragment android:name="com.example.android.bluetoothlegatt.GraphFragment"
        android:id="@+id/graph_fragment"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</LinearLayout>
